<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<div id="lists">
  <% @lists.each do |list| %>
    <%= render list %>
    <p>
      <%= link_to "Show this book", list %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_list_path %>
